section.contento.contento--faq
  .container
    .row
      .col-xs-12
        #accordion.panel-group
          each item, i in content.faq.items
            .panel
              .panel-heading.panel__heading
                h4.panel-title.panel__title
                  a.panel__link(data-toggle="collapse", data-parent="#accordion", href="#collapse"+(i+1))
                    !=item.answer
                    .panel__icon
                      .panel__ic
              .panel-collapse.collapse(id="collapse"+(i+1))
                .panel-body.panel__body
                  p.panel__text=item.text
